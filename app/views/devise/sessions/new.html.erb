<!-- ログイン画面参考 https://jp.strikingly.com/s/login?locale=ja -->

<div class='login-wrapper'>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class='login-main'>
      <div class='login_service-name'>
        <%= image_tag 'admin/logo_test.svg', class: 'logo_img' %>
      </div>
      <div class='login-form'>
        <div class='login-form-input-area'>
          <div class='login-email'>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'login-email-input', :placeholder =>"Eメール" %>
          </div>
          <div class='login-passwd'>
            <%= f.password_field :password, autocomplete: "current-password", :class => 'login-passwd-input', :placeholder =>"パスワード" %>
          </div>
        </div>
      </div>
      <!-- LINEログインのみで運用、様子見　-->
      <%# <div class='login-button-area'>
        <%= f.submit "ログイン", :class => 'login-button' %>
      <%# </div> %>
      <div class='sns-login-button-area'>
        <%= link_to "LINEでログイン", admin_user_line_omniauth_authorize_path, :class => 'sns-login-button', method: :post %>
      </div>
      <div class='login-remember-passwd'>
      </div>
    </div>
  <% end %>
</div>

